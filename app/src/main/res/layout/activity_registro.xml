<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightwhite"
    android:padding="10dp"
    tools:context=".RegistroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"/>
        <TextView
            android:id="@+id/LogInbtn"
            android:onClick="LognIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:gravity="end"
            android:textColor="@color/blackcolor"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crea_cuenta"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/blackcolor"
            android:textSize="25sp"
            android:textStyle="bold"/>


        <EditText
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="@string/email"
            android:layout_marginTop="35dp"
            android:paddingLeft="15dp"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:background="@drawable/edt_login"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="@string/password"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:inputType="textPassword"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:background="@drawable/edt_login"
            />

        <EditText
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="@string/NIF"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:inputType="text"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:background="@drawable/edt_login"
            />

        <EditText
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="@string/nombre"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:inputType="textPersonName"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:background="@drawable/edt_login"
            />

        <EditText
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="@string/apellido1"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:inputType="textPersonName"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:background="@drawable/edt_login"
            />

        <EditText
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="@string/apellido2"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:inputType="textPersonName"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:background="@drawable/edt_login"
            />

        <EditText
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:hint="@string/telÃ©fono"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:inputType="phone"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:background="@drawable/edt_login"
            />

        <Button
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:id="@+id/btn_crearCuenta"
            android:text="@string/crea_cuenta_btn"
            android:textColor="@color/whitecolor"
            android:textAllCaps="false"
            android:layout_marginTop="25dp"
            android:elevation="5dp"
            android:onClick="gotoNext"
            android:background="@drawable/btn"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="By Pressing 'Join Us' You agree\n     to our trems and conditions"
            android:textColor="@color/fullwhite"
            android:layout_marginTop="25dp"/>

    </LinearLayout>



</LinearLayout>